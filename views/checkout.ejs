}


window.enableDisableButton = function()
{
	try
	{
		if(document.getElementById("terms").checked == true)
		{
			document.getElementById("submit").disabled = false;
		}
		else
		{
			document.getElementById("submit").disabled = true;
		}
	}
	catch(err)
	{
		alert(err);
	}
}
</script>

<script>
$(document).ready(function(){
		/* attach a submit handler to the form */
		$("#checkout_form").submit(function(event) {
		/* stop form from submitting normally */
		event.preventDefault();
		/* get some values from elements on the page: */
		var $form = $( this ),
		name = $form.find( 'input[name="fullname"]' ).val(),
		address = $form.find( 'input[name="address"]' ).val(),
		city = $form.find( 'input[name="city"]' ).val(),
		country = $form.find( 'input[name="country"]' ).val(),
		zip = $form.find( 'input[name="zip"]' ).val(),
		email = $form.find( 'input[name="email"]' ).val(),
		contact_no = $form.find( 'input[name="contact_no"]' ).val(),
		url = $form.attr( 'action');
		
		$( "#submit" ).empty().append("<td id = 'loading-image'><h4 style='display:inline'>Loading..</h4>&nbsp;&nbsp;<img src='/images/loading.gif' width='18' height='18' alt='wait...' title='please wait...'/></td>");
		/* Send the data using post */
		/* Put the results in a div */
		var posting = $.post( url, { name : name,address:address, city : city, country: country, zip: zip, email: email, contact_no: contact_no  } ).done(function(data) {
		$( "#result" ).empty().append(data);
		});
	});
});
</script>


